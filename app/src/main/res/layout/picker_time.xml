<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dialog_horizontal_margin"
    android:paddingRight="@dimen/dialog_horizontal_margin">

    <com.science.carnetplus.widget.wheelview.WheelView
        android:id="@+id/year"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:itemNumber="3"
        app:lineColor="@color/colorDivider"
        app:maskHight="32dp"
        app:noEmpty="true"
        app:normalTextColor="@color/textSecondary"
        app:normalTextSize="12sp"
        app:selectedTextColor="@color/textPrimary"
        app:selectedTextSize="18sp"
        app:unitHight="50dp"/>

    <com.science.carnetplus.widget.wheelview.WheelView
        android:id="@+id/month"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        app:itemNumber="3"
        app:lineColor="@color/colorDivider"
        app:maskHight="32dp"
        app:noEmpty="true"
        app:normalTextColor="@color/textSecondary"
        app:normalTextSize="12sp"
        app:selectedTextColor="@color/textPrimary"
        app:selectedTextSize="18sp"
        app:unitHight="50dp"/>
</LinearLayout>